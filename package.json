{
  "name": "bucketmate",
  "version": "1.0.0",
  "description": "BucketMate monorepo",
  "private": true,
  "scripts": {
    "demo": "pnpm -F demo dev",
    "build": "pnpm -r run build",
    "clean": "pnpm -r run clean",
    "test": "pnpm -r run test",
    "dev": "pnpm -r run dev",

    "build-packages": "pnpm -F @bucketmate/hono build; pnpm -F @bucketmate/client build",

    "publish:client": "pnpm --filter @bucketmate/client publish",
    "publish:hono": "pnpm --filter @bucketmate/hono publish",

    "demo-next": "pnpm -F demo-nextjs dev --port 3003",
    "demo-hono": "pnpm -F demo-honojs dev"
  },
  "keywords": [
    "monorepo",
    "s3",
    "bucketmate"
  ],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.10.0",
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "typescript": "5.9.3"
  }
}
